<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}MySpotify{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    {% block body %}
        <div class="container mt-4">
            <h1>Crear nueva Playlist</h1>

            {# Mostrar mensajes de error #}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            {# Mostrar mensajes de Ã©xito #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {# Verificar si existe un formulario antes de renderizarlo #}
            {% if form is defined and form is not null %}
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nombre) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.visibilidad) }}
                        {{ form_widget(form.visibilidad) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.visibilidad) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.likes) }}
                        {{ form_widget(form.likes) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.likes) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.portada) }}
                        {{ form_widget(form.portada) }}
                        <small class="form-text text-muted">Introduce la URL de una imagen para la portada de la playlist.</small>
                        <div class="invalid-feedback">
                            {{ form_errors(form.portada) }}
                        </div>
                    </div>

                    {# Campo para seleccionar canciones #}
                    <div class="mb-3">
                        {{ form_label(form.canciones) }}
                        <div class="canciones-container">
                            {{ form_widget(form.canciones) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.canciones) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Crear Playlist</button>
                {{ form_end(form) }}
            {% endif %}

            <a href="{{ path('app_playlist') }}" class="btn btn-secondary mt-3">Volver al listado</a>
        </div>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                background-color: #121212;
                color: white;
            }

            .container {
                padding: 2rem;
            }

            h1 {
                font-size: 2rem;
                margin-bottom: 1.5rem;
            }

            .alert {
                padding: 1rem;
                margin-bottom: 1rem;
                border-radius: 4px;
            }

            .alert-danger {
                background-color: #ff4444;
                color: white;
            }

            .alert-success {
                background-color: #00C851;
                color: white;
            }

            .form-group {
                margin-bottom: 1.5rem;
            }

            .form-label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: bold;
            }

            .form-control {
                width: 100%;
                padding: 0.5rem;
                border: 1px solid #333;
                border-radius: 4px;
                background-color: #282828;
                color: white;
            }

            .form-control:focus {
                border-color: #1DB954;
                outline: none;
            }

            .invalid-feedback {
                color: #ff4444;
                font-size: 0.875rem;
                margin-top: 0.25rem;
            }

            .btn {
                padding: 0.5rem 1rem;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 1rem;
            }

            .btn-primary {
                background-color: #1DB954;
                color: white;
            }

            .btn-primary:hover {
                background-color: #1ed760;
            }

            .btn-secondary {
                background-color: #333;
                color: white;
            }

            .btn-secondary:hover {
                background-color: #444;
            }

            .canciones-container {
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
            }

            .canciones-container .form-check {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .canciones-container .form-check-input {
                margin: 0;
            }

            .canciones-container .form-check-label {
                margin: 0;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .container {
                    padding: 1rem;
                }

                h1 {
                    font-size: 1.5rem;
                }

                .btn {
                    width: 100%;
                    margin-bottom: 0.5rem;
                }
            }
        </style>
    {% endblock %}
    </body>
</html>